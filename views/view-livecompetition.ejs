<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Live Competitions</title>
    <!-- Add your stylesheets and other head content here -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            margin-top: 50px;
            color: #424242;
        }
        table {
            width: 80%;
            margin: 20px auto;
            background-color: #fff;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #1e88e5;
            color: #fff;
        }
        td a {
            color: #1e88e5;
            text-decoration: none;
            font-weight: bold;
        }
        td a:hover {
            color: #1976d2;
        }
    </style>
</head>
<body>
    <h1>Live Competitions</h1>
    <div>
        <table>
            <thead>
                <tr>
                    <th>View Photos</th>
                    <th>Competition ID</th>
                    <th>Topic Name</th>
                    <th>Last Date</th>
                </tr>
            </thead>
            <tbody>
                <% competitions.forEach(competition => { %>
                    <tr>
                        <td><a href="/view-photo/<%= competition.uniqueId %>">View Photo</a></td>
                        <td><%= competition.uniqueId %></td>
                        <td><%= competition.topic %></td>
                        <td><%= competition.lastDate %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Include the scripts file -->
    <!-- Add jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
